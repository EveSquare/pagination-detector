{
  "name": "Pagination Detector",
  "description": "Detects pagination and allows arrow movement with the keyboard.",
  "version": "1.0",
  "manifest_version": 3,
  "default_locale": "en",
  "author": "EveSquare",
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "run_at":"document_end",
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-3.6.0.min.js","src/content-scripts.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "/images/default/icon_16.png",
    "32": "/images/default/icon_32.png",
    "48": "/images/default/icon_48.png",
    "128": "/images/default/icon_128.png"
  },
  "options_page": "src/options/index.html"
}